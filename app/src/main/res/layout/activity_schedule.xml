<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity"
    android:background="@drawable/main_header_selector"
    android:id="@+id/agenda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/background_alertdialog"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_agenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Tarea"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_linea_gris" />


        <EditText
            android:id="@+id/nombre_tarea"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_round"
            android:hint="DescripciÃ³n de tarea"
            android:inputType="text"
            android:padding="3dp"
            />


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_calendar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Elige una fecha"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/boton1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="openCalendar"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:hint="Fecha"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />




        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_alarm"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Elige la hora"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/boton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="openCalendar"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:hint="Hora"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_linea_gris" />

        <Button
            android:id="@+id/GuardarTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:layout_gravity="end"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>